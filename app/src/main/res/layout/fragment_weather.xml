<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5">

    <include
        layout="@layout/item_headtoday_weather"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:layout_weight="2" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_day_of_week"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:layout_weight="2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:layout_margin="@dimen/relative_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_long_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/text_link_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/text_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>
